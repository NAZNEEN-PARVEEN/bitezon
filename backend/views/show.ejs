<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" />
  <link rel="stylesheet" href="/show.css">
  <title>Show Dishes</title>
  <style>
    body { background: #f8f9fa; }
    .show-container { max-width: 900px; margin: auto; padding: 20px; }
    .section { background: #fff; border-radius: 10px; padding: 20px; margin-bottom: 30px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); text-align: center; }
    .recipe-img { width: 100%; max-width: 400px; border-radius: 10px; margin-bottom: 15px; }
    .btn-group .btn { margin: 5px 2px; }
    .list-group-item { text-align: left; }
    @media(max-width: 576px) {
      .recipe-img { max-width: 100%; }
    }

  </style>
</head>
<body>

  <!-- Navbar -->
  <%- include('navbar/nav.ejs') %>
  

  <div class="container show-container">

    <!-- DISH SECTION -->
    <div class="section">
      <img src="<%= recipe.image %>" alt="<%= recipe.recipeName %>" class="recipe-img">
     <h3> Name : <%= recipe.user ? recipe.user.name : "Unknown" %></h3>

      <h3><i class="fa-solid fa-utensils" style="color:#DC3545;"></i> <strong><%= recipe.recipeName %></strong></h3>
      <p><strong>Quantity:</strong> <%= recipe.quantity %></p>
<p><strong>Rate:</strong> ₹<%= recipe.rate ? recipe.rate : 'Not specified' %></p>

      <p><strong>Description:</strong> <%= recipe.description %></p>
      <p><strong>Ingredients:</strong> <%= recipe.ingredients.join(', ') %></p>

      <div class="btn-group flex-wrap justify-content-center my-2">
        <a href="/recipe/edit/<%= recipe._id %>" class="btn btn-primary " id="editbutt">Edit</a>
        <form action="/recipe/delete/<%= recipe._id %>?_method=DELETE" method="POST" style="display:inline-block;">
          <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</button>
        </form>
        <a href="/payment/<%= recipe._id %>" class="btn btn-success" id="paybutt">Pay</a>
        <a href="/placebook/<%= recipe._id %>" class="btn btn-warning" id="bookplacebutt">Book Place</a>
      </div>
    </div>

    <!-- PLACE BOOKINGS SECTION -->
    <div class="section">
      <h4>Place Bookings</h4>
      <% if (recipe.placeBooking && recipe.placeBooking.length > 0) { %>
        <ul class="list-group mb-3">
          <% recipe.placeBooking.forEach(booking => { %>
            <li class="list-group-item">
              <strong>Name : <%= booking.username %></strong> <br> 
                <strong>Place : <%= booking.placeName %></strong> <br>    <strong> booked how many person : <%= booking.personCount %></strong><br> <strong> Days  : <%= booking.days %> day(s)</strong> <br>
            <strong>  Meals: <%= booking.meals.join(", ") %></strong><br>
          <strong>   Address: <%= booking.address %></strong> 
              <div class="mt-2 text-center">
                <a href="/place/edit/<%= recipe._id %>/<%= booking._id %>" class="btn btn-sm btn-primary mb-1">Edit</a>
                <form action="/place/delete/<%= recipe._id %>/<%= booking._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger mb-1" onclick="return confirm('Delete this booking?')">Delete</button>
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No place bookings yet.</p>
      <% } %>
    </div>

  <!-- REVIEWS SECTION -->
<div class="section text-center">
  <h4>Reviews</h4>

  <% if (recipe.reviews && recipe.reviews.length > 0) { %>
    <ul class="list-group mb-3">
      <% recipe.reviews.forEach(review => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>Name :<%= review.username %></strong> <br> comment :<%= review.comment %>
            <% if(review.rating){ %> <br> Rating: <%= review.rating %> ★ <% } %>
          </div>
          <div>
            <!-- Edit Button -->
            <a class="editRev" href="/recipes/<%= recipe._id %>/reviews/<%= review._id %>/edit" class="btn btn-sm btn- mx-1">Edit</a>
            <!-- Delete Button -->
         <form action="/recipes/<%= recipe._id %>/reviews/<%= review._id %>/delete" method="POST" style="display:inline;">
  <button type="submit" class="delt  " onclick="return confirm('Delete this review?')">Delete</button>
</form>

          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No reviews yet.</p>
  <% } %>

  <!-- Add Review Form -->
  <form action="/recipes/<%= recipe._id %>/reviews" method="POST" class="mt-3">
    <div class="mb-2">
      <input type="text" name="comment" class="form-control" placeholder="Write your review" required>
    </div>
    <div class="mb-2">
      <select name="rating" class="form-control" required>
        <option value="">Select rating</option>
        <option value="1">1 ★</option>
        <option value="2">2 ★★</option>
        <option value="3">3 ★★★</option>
        <option value="4">4 ★★★★</option>
        <option value="5">5 ★★★★★</option>
      </select>
    </div>
    <button type="submit" class="btn btn-success " style="border-radius: 10px; margin-top: 5px; width: 90px; background-color: #DC3545; border: #DC3545;" id="subrevq">Submit Review</button>
  </form>
</div>


  </div>

  <br><br><br>
    <%- include('chatbot') %>

  <!-- Footer -->
  <%- include('navbar/footer.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
