    </div> -->

    <!-- Header Info -->
    <div class="place-header">
      <div class="info-text">
        <h1><%= place.name %></h1>
        <p class="category"><%= place.category || "Cafe, Restaurant" %></p>
        <p class="address"><%= place.address || "Address not available" %></p>
        <p class="des"><%= place.description || "No description available" %></p>

        <div class="timing-price">
          <span class="open-status">Open now</span>
          <span> | </span>
          <span><%= place.timings || "11:00 AM ‚Äì 12:00 AM" %></span>
          <span> | </span>
          <span>‚Çπ<%= place.priceRange || "2000" %> for two</span>
          <span> | </span>
          <a href="tel:<%= place.phone %>" class="phone">üìû <%= place.phone || "+91XXXXXXXXXX" %></a>
        </div>

        <div class="ratings">
          <div class="rating dining">
            ‚≠ê <%= place.ratings?.dining || "4.3" %>
            <p>Dining Ratings</p>
          </div>
          <div class="rating delivery new">
            New ‚ú®
            <p>Delivery Ratings</p>
          </div>
        </div>

        <div class="buttons">
          <button><i class="fa-solid fa-route"></i> Direction</button>
          <button><i class="fa-regular fa-comments"></i> Reviews</button>
          <a href="/placebook/68ee5a19fc9418633d72ce6c"><button><i class="fa-solid fa-clipboard-list"></i> Book a Table</button></a>
         <a href="/order"><button ><i class="fa-solid fa-check"></i> Order</button></a> 
        </div>
      </div>

      <!-- Image Gallery -->
      <div class="gallery">
        <% if (place.images && place.images.length > 0) { %>
          <% place.images.slice(0, 4).forEach((img, index) => { %>
            <img src="<%= img %>" alt="<%= place.name %> image <%= index + 1 %>">
          <% }) %>
        <% } else { %>
          <p>No images available</p>
        <% } %>
      </div>
    </div>

    <!-- Tabs Section -->
    <div class="tabs">
      <a href="#" class="active">Overview</a>
      <a href="/order">Order Online</a>
      <a href="/">Menu</a>

    </div>


        

    <!-- Additional Information Section -->
    <div class="more-info">
      <h2>Additional Information</h2>

      <p><strong>Region:</strong> <%= place.region || "Not specified" %></p>

      <p><strong>Popular Cities:</strong>
        <% if (place.popularCities && place.popularCities.length > 0) { %>
          <% place.popularCities.forEach(city => { %>
            <span class="chip"><%= city %></span>
          <% }) %>
        <% } else { %>
          Not specified
        <% } %>
      </p>

      <p><strong>Cuisines:</strong>
        <% if (place.cuisines && place.cuisines.length > 0) { %>
          <% place.cuisines.forEach(cuisine => { %>
            <span class="chip"><%= cuisine %></span>
          <% }) %>
        <% } else { %>
          Not specified
        <% } %>
      </p>

      <p><strong>Average Rating:</strong> <%= place.averageRating || "0.0" %></p>
      <p><strong>Total Reviews:</strong> <%= place.ratings?.totalReviews || 0 %></p>
      <p><strong>Created At:</strong> <%= place.createdAt ? (new Date(place.createdAt)).toLocaleString() : "N/A" %></p>
            <p><strong>Average Rating:</strong> <%= place.averageRating || "0.0" %></p>
    </div>


    <!-- menu -->
     <!-- More Info Section -->
<div class="more-inf">
