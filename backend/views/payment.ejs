<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment</title>
  <style>
    body {
      /* font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      margin-top: 50px;
      background-color: #f8f8f8; */
    }
    .container-p {
      background: #fff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      width: 500px;
      position: relative;
      margin-left: 570px;
    }
    h1 {
      font-size: 20px;
      margin-bottom: 10px;
    }
    p {
      margin: 5px 0;
    }
    button {
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      margin-top: 15px;
    }
    button:disabled {
      background-color: gray;
      cursor: not-allowed;
    }
    .success-msg {
      display: none;
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: #28a745;
      color: white;
      padding: 8px 15px;
      border-radius: 5px;
      font-weight: bold;
    }
    img.qr {
      display: block;
      margin: 20px auto;
      width: 150px;
    }

  .label {
    color: black; /* Label in black */
    font-weight: bold;
  }

  .value {
    color: darkgray; /* Value in light gray */
    font-weight: 400px;
    margin-left: 5px;
  }

  </style>
</head>
<body>

    <!-- navbar -->
  <%- include('navbar/nav.ejs') %>
  <br><br>
  <div class="container-p">
    <div class="success-msg" id="successMsg">Payment Successful! ðŸŽ‰</div>

 <h5>
  <span class="label">User:</span> 
  <span class="value"><%= recipe.username %></span>
</h5>

<h5>
  <span class="label">Payment for:</span> 
  <span class="value"><%= recipe.recipeName %></span>
</h5>
    <!-- <h1>Payment for: <%= recipe.recipeName %></h1> -->
    <p>Quantity: <%= recipe.quantity %></p>
    <p>Price per item: <%= recipe.rate || 100 %></p>
    <p>Total Amount: <%= (recipe.rate || 100) * recipe.quantity %></p>

    <img class="qr" src="data:image/jpeg;base64," alt="Scan QR to Pay">

    <form id="paymentForm">
      <button type="submit" id="payBtn">Pay Now</button>
    </form>
  </div>
  <br><br>

      <%- include('chatbot') %>

  <%- include('navbar/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  

  <script>
  const form = document.getElementById("paymentForm");
  const successMsg = document.getElementById("successMsg");
  const payBtn = document.getElementById("payBtn");

  // Load success sound
  const successSound = new Audio("/sounds/success.mp3");

  form.addEventListener("submit", async (e) => {
    e.preventDefault(); // prevent page reload

    payBtn.disabled = true;
    payBtn.innerText = "Processing...";

    try {
      const response = await fetch("/payment/<%= recipe._id %>/submit", {
        method: "POST",
      });

      if (response.ok) {
        // Show success message
        successMsg.style.display = "block";

        // Play sound
        successSound.play();

        // Hide pay button
        payBtn.style.display = "none";
      } else {
        alert("Payment failed, try again.");
        payBtn.disabled = false;
        payBtn.innerText = "Pay Now";
      }
    } catch (err) {
      alert("Error: " + err.message);
      payBtn.disabled = false;
      payBtn.innerText = "Pay Now";
    }
  });
</script>

</body>
</html>
