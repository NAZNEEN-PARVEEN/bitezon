<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= sweet.name %> | Details</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/plac.css" />
</head>
<body>

  <!-- Navbar -->
  <%- include('navbar/nav.ejs') %>


  <div class="place-container">

    <!-- Sweet Info Header -->
    <div class="place-header">
      <div class="info-text">
        <h1><%= sweet.name %></h1>
        <p class="category">Delicious Sweet</p>
        <p class="address"><%= sweet.address || "Address not available" %></p>

        <div class="timing-price">
          <span>Sweet Type: <%= sweet.type || "Traditional" %></span>
          <span> | </span>
          <span>‚Çπ<%= sweet.price || "100" %> per piece</span>
          <span> | </span>
          <span><strong>Overall Rating:</strong> ‚≠ê <%= sweet.overallRating || "4.5" %></span>
        </div>

        <div class="ratings">
          <div class="rating dining">
            ‚≠ê <%= sweet.dining?.rating || "4.3" %>
            <p>Dining Ratings</p>
          </div>
          <div class="rating delivery">
            ‚≠ê <%= sweet.delivery?.rating || "4.5" %>
            <p>Delivery Ratings</p>
          </div>

            <span> | </span>
  <a href="tel:<%= sweet.phone %>" class="phone">üìû <%= sweet.phone || "+91XXXXXXXXXX" %></a>
        </div>

        <div class="buttons">
          <button><i class="fa-solid fa-route"></i> Direction</button>
          <button><i class="fa-regular fa-comments"></i> Reviews</button>
          <a href="/order"><button><i class="fa-solid fa-clipboard-list"></i> Order Now</button></a>
        </div>
      </div>

      <!-- Image Gallery -->
      <div class="gallery">
        <% if (sweet.images && sweet.images.length > 0) { %>
          <% sweet.images.slice(0, 4).forEach((img, index) => { %>
            <img src="<%= img %>" alt="<%= sweet.name %> image <%= index + 1 %>">
          <% }) %>
        <% } else { %>
          <p>No images available</p>
        <% } %>
      </div>
    </div>

    <!-- Tabs -->
    <div class="tabs">
      <a href="#" class="active">Overview</a>
      <a href="/order">Order Online</a>
      <a href="#">Menu</a>
    </div>

    <!-- Additional Info -->
    <div class="more-info">
      <h2>Additional Information</h2>

      <p><strong>Category:</strong> <%= sweet.category || "Indian Sweet" %></p>

      <p><strong>Cuisines:</strong>
        <% if (sweet.cuisines && sweet.cuisines.length > 0) { %>
          <% sweet.cuisines.forEach(cuisine => { %>
            <span class="chip"><%= cuisine %></span>
          <% }) %>
        <% } else { %>
          Not specified
        <% } %>
      </p>

      <p><strong>Reviews:</strong> Dining - <%= sweet.dining?.reviews || 0 %>, Delivery - <%= sweet.delivery?.reviews || 0 %></p>
      <p><strong>Created At:</strong> <%= sweet.createdAt ? (new Date(sweet.createdAt)).toLocaleString() : "N/A" %></p>
    </div>

    <!-- More Info Grid -->
    <div class="more-inf">
      <h3>More Info</h3>
      <div class="info-grid">
        <% const infoItems = [
          "Freshly Made",
          "Home Delivery",
          "Takeaway Available",
          "Gift Packing",
          "Authentic Taste",
          "Festival Special",
          "Pure Ghee",
          "Sugar Free Options",
          "Custom Orders",
          "Party Orders"
        ]; %>

        <% infoItems.forEach(item => { %>
          <div class="info-item">
            <span><%= item %></span>
          </div>
        <% }) %>
      </div>
    </div>

    <br><br>

    <!-- Explore Other Sweets -->
    <div class="container my-4">
      <div class="row g-4"> 

        <div class="col-md-3 col-sm-6">
          <a href="/sweets" class="card-link">
            <div class="card">
              <img src="https://b.zmtcdn.com/data/pictures/7/18843927/8e1d47f6120a43f2a56490acb0874a90_o2_featured_v2.jpg" class="card-img-top" alt="">
              <div class="card-body">
                <p class="card-text">Here are some more delicious sweets. <b>Explore more...</b></p>
              </div>
            </div>
          </a>
        </div>

        <div class="col-md-3 col-sm-6">
          <a href="/sweets" class="card-link">
            <div class="card">
              <img src="https://b.zmtcdn.com/data/pictures/4/21793624/4a6762073fecbb2344bf4f4ed5764505_o2_featured_v2.jpg" class="card-img-top" alt="">
              <div class="card-body">
                <p class="card-text">Here are some more delicious sweets. <b>Explore more...</b></p>
              </div>
            </div>
          </a>
        </div>

        <div class="col-md-3 col-sm-6">
          <a href="/sweets" class="card-link">
            <div class="card">
              <img src="https://b.zmtcdn.com/data/dish_photos/e7d/7dfa8c858b3d404d3a7e01eab7186e7d.jpeg?output-format=webp" class="card-img-top" alt="">
              <div class="card-body">
                <p class="card-text">Here are some more delicious sweets. <b>Explore more...</b></p>
              </div>
            </div>
          </a>
        </div>

        <div class="col-md-3 col-sm-6">
          <a href="/sweets" class="card-link">
            <div class="card">
              <img src="https://b.zmtcdn.com/data/dish_photos/b57/3b7907664485610182992cf27e5f9b57.jpeg?output-format=webp" class="card-img-top" alt="">
              <div class="card-body">
                <p class="card-text">Here are some more delicious sweets. <b>Explore more...</b></p>
              </div>
            </div>
          </a>
        </div>

      </div>
    </div>

    <h4>More Features</h4>
    <a href="/places">
      <div class="barimage">
        <img src="https://i.pinimg.com/736x/03/02/b1/0302b1590a7f4d460f69585c94032413.jpg" alt="">
        <img src="https://i.pinimg.com/originals/48/07/60/480760bc00797da4993f97be18abb6e3.jpg" alt="">
        <img src="https://i.pinimg.com/736x/ba/2d/41/ba2d41be736e3bbd4598c7b34e553e5b.jpg" alt="">
        <img src="https://i.pinimg.com/736x/8c/bb/dd/8cbbdd454ea4fc78931e830ec68d2d22.jpg" alt="">
        <img src="https://i.pinimg.com/474x/ef/70/ca/ef70ca83a1d2a33916e6fe7f9c9d64d2.jpg" alt="">
        <img src="https://www.weddingsutra.com/images/wedding-images/entertaining/fairy-lights-decor/fairy-lights-decor-32.webp" alt="">
      </div>
    </a>

  </div>
  <%- include('chatbot') %>
  <br><br>

  <%- include('navbar/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
